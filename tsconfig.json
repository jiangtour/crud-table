{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "skipLibCheck": true,
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["/src/**/*.test.tsx", "src/example/**/*", "src/setupTests.ts"]
}
